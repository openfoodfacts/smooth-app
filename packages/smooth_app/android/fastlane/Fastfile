# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane


default_platform(:android)

platform :android do
  desc "Deploy to closed beta track"
  lane :closed_beta do
    begin
      gradle(task: "clean")
      gradle(
        task: "bundle",
        build_type: 'Release'
      )
      upload_to_play_store(
        track: 'internal',
        aab: '../build/app/outputs/bundle/release/app-release.aab',
        skip_upload_metadata: true,
        skip_upload_images: true,
        skip_upload_screenshots: true,
        release_status: "draft",
        version_code: flutter_version(pubspec_location: '../pubspec.yaml')["version_code"],
      )
    end
  end
  lane :getVersion do
      begin
          #version = google_play_track_version_codes(
          #    package_name: "org.openfoodfacts.app",
          #    track: "internal",
          #    json_key: "./fastlane/envfiles/api-4712693179220384697-162836-33ea08672303.json",
          #)

          flutter_version_manager(
            path_to_yaml: "../pubspec.yaml"
            version_name: "0.0.69"
            version_code: "10"
          )
      end
  end

end





